{% set p = pagination %}
{% if p and p.pages|length > 1 %}
<nav class="flex items-center justify-center gap-2" aria-label="Pagination">
{% if p.prevUrl %}
<a href="{{ p.prevUrl }}" class="px-3 py-1 rounded bg-gray-200 hover:bg-gray-300">← Newer</a>
{% endif %}


{% for page_num in p.pages %}
<a href="{{ page_num.url }}"
class="px-3 py-1 rounded {{ page_num.active ? 'bg-gray-900 text-white' : 'bg-gray-200 hover:bg-gray-300' }}">
{{ page_num.number }}
</a>
{% endfor %}


{% if p.nextUrl %}
<a href="{{ p.nextUrl }}" class="px-3 py-1 rounded bg-gray-200 hover:bg-gray-300">Older →</a>
{% endif %}
</nav>
{% endif %}